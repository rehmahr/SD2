<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAA4BD"
    tools:context=".Game3Lev1"
    tools:layout_editor_absoluteX="-322dp"
    tools:layout_editor_absoluteY="-195dp">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/Menubar"
        android:layout_width="90dp"
        android:layout_height="458dp"
        android:layout_marginTop="209dp"
        android:layout_marginBottom="233dp"
        android:background="@drawable/rounded_corner_navigation_view"
        android:elevation="60dp"
        android:visibility="visible"
        app:itemIconTint="@color/Grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">


        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:background="@drawable/more_round"
            android:scaleType="fitCenter"
            android:src="@drawable/home_button"
            android:translationX="15dp"
            android:translationY="50dp"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/report"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:background="@drawable/more_round"
            android:scaleType="fitCenter"
            android:src="@drawable/report"
            android:translationX="15dp"
            android:translationY="150dp" />

        <ImageButton
            android:id="@+id/feedback"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:background="@drawable/more_round"
            android:scaleType="fitCenter"
            android:src="@drawable/icons8_feedback_100"
            android:translationX="15dp"
            android:translationY="250dp" />

        <ImageButton
            android:id="@+id/help"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:background="@drawable/more_round"
            android:scaleType="fitCenter"
            android:src="@drawable/help"
            android:translationX="15dp"
            android:translationY="350dp" />

    </com.google.android.material.navigation.NavigationView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="552dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/bungee"
        android:shadowColor="@color/pink"
        android:shadowDx="-20"
        android:shadowDy="-2"
        android:shadowRadius="20"
        android:text="Level 1"
        android:textColor="@color/purple"
        android:textSize="40sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="850dp"
        android:layout_height="570dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="#e5e5e5"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/proceedButton"
                android:layout_width="130dp"
                android:layout_height="68dp"
                android:layout_marginTop="235dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="297dp"
                android:backgroundTint="#DF7F99"
                android:text="Proceed to Test"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/emotionWord"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="389dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="388dp"
                android:fontFamily="@font/bungee_inline"
                android:text="SAD"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emotionWord">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/matchEmptyFace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/empty_face" />

                    <ImageView
                        android:id="@+id/faceGap"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:layout_marginTop="70dp"
                        android:elevation="20dp"
                        android:scaleType="fitCenter"
                        app:layout_constraintBottom_toBottomOf="@+id/matchEmptyFace"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@android:drawable/ic_menu_help" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView14">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/matchSad"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:layout_marginStart="60dp"
                        android:tag="SAD"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/sad_face" />

                    <ImageView
                        android:id="@+id/matchHappy"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:layout_marginEnd="60dp"
                        android:tag="HAPPY"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/happy_face" />

                    <ImageView
                        android:id="@+id/matchSurprised"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:scaleType="fitCenter"
                        android:tag="SURPRISED"
                        app:layout_constraintEnd_toStartOf="@+id/matchHappy"
                        app:layout_constraintStart_toEndOf="@+id/matchSad"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/suprised_face" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="253dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="10dp"

        android:elegantTextHeight="true"
        android:fontFamily="@font/bungee_inline"
        android:outlineAmbientShadowColor="@color/beige"
        android:shadowColor="@color/pink"
        android:shadowDx="-20"
        android:shadowRadius="1"
        android:text="MATCH THE EMOTION"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="70sp"
        android:typeface="monospace"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="124dp"
        android:layout_height="96dp"
        android:layout_marginEnd="44dp"
        android:rotation="26"
        android:rotationY="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/star"
        tools:layout_editor_absoluteY="332dp" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="149dp"
        android:layout_height="138dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="60dp"
        android:rotation="17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="180dp"
        android:layout_height="185dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="103dp"
        android:rotation="-17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView20"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="173dp"
        android:layout_height="173dp"
        android:layout_marginEnd="130dp"
        android:rotation="43"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/star"
        tools:layout_editor_absoluteY="528dp" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="117dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="144dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView26"
        app:layout_constraintStart_toEndOf="@+id/Menubar"
        app:srcCompat="@drawable/star" />

</androidx.constraintlayout.widget.ConstraintLayout>
