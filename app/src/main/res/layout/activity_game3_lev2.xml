<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcbd9"
    tools:context=".Game3Lev2"
    tools:layout_editor_absoluteX="-322dp"
    tools:layout_editor_absoluteY="-195dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="336dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/bungee"
        android:shadowColor="@color/pink"
        android:shadowDx="-20"
        android:shadowDy="-2"
        android:shadowRadius="20"
        android:text="match the words with faces!"
        android:textColor="@color/purple"
        android:textSize="40sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="253dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="10dp"

        android:elegantTextHeight="true"
        android:fontFamily="@font/bungee_inline"
        android:outlineAmbientShadowColor="@color/beige"
        android:shadowColor="@color/pink"
        android:shadowDx="-20"
        android:shadowRadius="1"
        android:text="MEMORY MATCHING"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="70sp"
        android:typeface="monospace"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="85dp"
        android:layout_height="500dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_corner_navigation_view"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner_navigation_view">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/feedback"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton5" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/report"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton7" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/help"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton9" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="1038dp"
        android:layout_height="481dp"
        android:layout_marginStart="198dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="150dp"
        app:cardBackgroundColor="#e5e5e5"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView8"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/front_side1"
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:layout_marginStart="129dp"
                android:layout_marginTop="71dp"
                android:elevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/front_side" />

            <ImageButton
                android:id="@+id/front_side2"
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:layout_marginStart="51dp"
                android:layout_marginTop="71dp"
                android:elevation="10dp"
                app:layout_constraintStart_toEndOf="@+id/front_side1"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/front_side" />

            <ImageButton
                android:id="@+id/front_side3"
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="71dp"
                android:elevation="10dp"
                app:layout_constraintStart_toEndOf="@+id/front_side2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/front_side" />

            <ImageButton
                android:id="@+id/front_side4"
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:layout_marginTop="71dp"
                android:layout_marginEnd="144dp"
                android:elevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/front_side" />

            <ImageButton
                android:id="@+id/front_side5"
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:layout_marginStart="129dp"
                android:layout_marginBottom="71dp"
                android:elevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/front_side" />

            <ImageButton
                android:id="@+id/front_side6"
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:layout_marginStart="51dp"
                android:layout_marginBottom="71dp"
                android:elevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/front_side5"
                app:srcCompat="@drawable/front_side" />

            <ImageButton
                android:id="@+id/front_side7"
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:layout_marginStart="56dp"
                android:layout_marginBottom="71dp"
                android:elevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/front_side6"
                app:srcCompat="@drawable/front_side" />

            <ImageButton
                android:id="@+id/front_side8"
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:layout_marginEnd="144dp"
                android:layout_marginBottom="68dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/front_side" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/shuffleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shuffle"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="@+id/cardView3"/>

</androidx.constraintlayout.widget.ConstraintLayout>